<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sun_navigation"
    app:startDestination="@id/oneFragment">

    <fragment
        android:id="@+id/oneFragment"
        android:name="com.example.sun8.fragments.OneFragment"
        android:label="fragment_one"
        tools:layout="@layout/fragment_one" >
        <action
            android:id="@+id/action_oneFragment_to_pagerViewFragment"
            app:destination="@id/pagerViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/pagerViewFragment"
        android:name="com.example.sun8.fragments.PagerViewFragment"
        android:label="fragment_pager_view"
        tools:layout="@layout/fragment_pager_view" />
</navigation>